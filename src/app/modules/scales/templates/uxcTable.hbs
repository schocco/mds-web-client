<table>
    <thead>
    <tr>
        <th>Category</th>
        <th>Value</th>
        <th>Score</th>
    </tr>
    </thead>

    <tbody>

    <tr>
        <td>Total length (m)</td>
        <td id="total_length">
            {{#if editable }}
            {{!-- show form fields when the score should be editable --}}
                <input type="number" value="{{ ../total_length }}"/>
            {{ else }}
            {{!-- no form fields otherwise --}}
                {{ ../total_length }}
            {{/if}}
        </td>
        <td style="text-align:right;">
            <span class="titip-left titip-wrapped-large"> {{ score.total_length.result }} <span
                    class="titip-content">{{ score.total_length.explanation }}</span></span>
        </td>
    </tr>

    <tr>
        <td>Total ascent (m)</td>
        <td id="total_ascent">
            {{#if editable }}
            {{!-- show form fields when the score should be editable --}}
                <input type="number" value="{{round ../total_ascent }}"/>
            {{ else }}
            {{!-- no form fields otherwise --}}
                {{round ../total_ascent }}
            {{/if}}
        </td>
        <td style="text-align:right;">
            <span class="titip-left titip-wrapped-large"> {{ score.total_ascent.result }} <span
                    class="titip-content">{{ score.total_ascent.explanation }}</span></span>
        </td>
    </tr>

    <tr>
        <td>Maximum slope uphill (%)</td>
        <td id="max_slope_uh">
            {{#if editable }}
            {{!-- show form fields when the score should be editable --}}
                <input type="number" value="{{round ../max_slope_uh }}"/>
            {{ else }}
            {{!-- no form fields otherwise --}}
                {{round ../max_slope_uh }}
            {{/if}}
        </td>
        <td style="text-align:right;">
            <span class="titip-left titip-wrapped-large"> {{ score.max_slope_uh.result }} <span
                    class="titip-content">{{ score.max_slope_uh.explanation }}</span></span>
        </td>
    </tr>

    <tr>
        <td>Maximum difficulty (M Scale)</td>
        <td id="max_difficulty">
            {{#if editable }}
            {{!-- show form fields when the score should be editable --}}
                <select>
                    {{#range 0 5 0.5 }}
                        <option value="{{ this }}" {{#equals (parsenumber ../max_difficulty) this}}selected{{/equals}}>M{{ this }}</option>
                    {{/range}}
                </select>
            {{ else }}
            {{!-- no form fields otherwise --}}
                {{ ../max_difficulty }}
            {{/if}}
        </td>
        <td style="text-align:right;">
            <span class="titip-left titip-wrapped-large"> {{ score.max_difficulty.result }} <span
                    class="titip-content">{{ score.max_difficulty.explanation }}</span></span>
        </td>
    </tr>

    <tr>
        <td>Average difficulty (M Scale)</td>
        <td id="avg_difficulty">
            {{#if editable }}
            {{!-- show form fields when the score should be editable --}}
                <select>
                    {{#range 0 5 0.5 }}
                        <option value="{{ this }}" {{#equals (parsenumber ../avg_difficulty) this}}selected{{/equals}}>M{{ this }}</option>
                    {{/range}}
                </select>
            {{ else }}
            {{!-- no form fields otherwise --}}
                {{ ../avg_difficulty }}
            {{/if}}
        </td>
        <td style="text-align:right;">
            <span class="titip-left titip-wrapped-large"> {{ score.avg_difficulty.result }} <span
                    class="titip-content">{{ score.avg_difficulty.explanation }}</span></span>
        </td>
    </tr>

    <tr>
        <td colspan=2>Total score</td>
        <td style="text-align:right; font-weight: 600;">{{ score.total_score }}</td>
    </tr>

    </tbody>
</table>